<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="IGRIS_C">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import IGRIS_C urdf file -->
    <xacro:include filename="$(find urdf_igris)/urdf/igris_c_v2.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="IGRIS_C.ros2_control.xacro" />


    <xacro:IGRIS_C_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
